<h3>Books</h3>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<td>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
</td>

<% @books.each do |book| %>
<tr>
<td>
<%= book.book_title %>
</td>
<td>
<%= book.book_comment %>
</td>
<td>


	<%#なぜ@siteじゃないのか？？ なぜclassを入れるのか%>
<%= link_to "show", book_path(book.id),class:"show_#{book.id}" %>

<%= link_to "destroy", book_path(book.id), method: :delete, class:"destroy_#{book.id}",data: {confirm:'Are you sure?？'} %>


</td>
</tr>
<% end %>
</tbody>
</table>


<div class="box2">
<h1>New book</h1>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :book_title , class:"book_title"%>

<h4>Body</h4>
<%= f.text_area :book_comment, class:"book_body" %>

<%= f.submit '投稿' %>

<% end %>
</div>
