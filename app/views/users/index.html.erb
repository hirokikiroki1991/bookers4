
<div class="container"> <!-- ここを追加 -->
    <div class="row">   <!-- ここを追加 -->
    
          <div class="col-lg-3">

               <h2 >User info</h2>

                <div class = "profile_image">
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                </div>
                <br>
                <br>
                <br>
                <br>
                <br>
                <br>
              <table class="table table-default">
                 <tr><td>NAME<td><%= @user.name %>
                 <tr><td>Introduction<td> <%= @user.introduction %>
              </table>

              <%= link_to '', edit_user_path(@user.id), class: 'btn btn-default glyphicon glyphicon-wrench col-lg-12 edit_user_#{@user.id}' %>
              



              <div class="post">
                <h1>New book</h1>

                 <%= form_for(@book) do |f| %>

                 <h4>Title</h4>
                   <%= f.text_field :book_title , class: "book_title col-lg-12"%>

                 <h4>Opinion</h4>
                   <%= f.text_area :book_comment, class: "book_body  col-lg-12" %>

                   <br>
                   <br>
                   <p> </p>
                    <%= f.submit 'Create Book',class: 'btn btn-primary col-lg-12' %>
                  

                   

                   <% end %>
              </div>
          </div>

             <h2>Users</h2>

    <div class="col-lg-9">  <!-- ここを追加 -->
      <table class="table table-default">
        <thead>
          <th>image</th>
           <th>name</th>
        </thead>

    <tbody>
        

       <% @users.each do |user| %>
     <tr>
       <td>
         <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" ,:size => "40x40" %>
       </td>
       <td>
         <%= user.name %>
       </td>
       <td>


  
            <%= link_to "show", user_path(user.id),class:"show_#{user.id}" %>

            
       </td>
       <td></td>
      <% end %>
     </tbody>
</table>
</div>


</div>
</div>