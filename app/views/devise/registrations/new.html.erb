<div class="col-lg-1" style="background-color: white;">
        </div>

      <div class="col-lg-11">

   <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

       <div>
         <%= f.label :name %><br />
         <%= f.text_field :name, autofocus: true, class: "name" %>
       </div>

       <div>
          <%= f.label :email %><br />
          <%= f.email_field :email , class: "email"  %>
       </div>

       <div>
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
       </div>

       <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %></div>

       <div>
        <%= f.submit "Sign up", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links", class: "sign_in" %>

</div>