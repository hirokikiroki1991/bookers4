<!DOCTYPE html>
<html>
  <head>
    <title>Bookers4</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"><span>Bookers</span></a>
        </div>
       
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to ' Home',user_path(current_user),class: 'home glyphicon glyphicon-home' %></li>
          <li><%= link_to ' Users',users_path,class: 'users glyphicon glyphicon-user' %></li>
          <li><%= link_to ' Books', "/books/new",class: 'books glyphicon glyphicon-book'%></li>
          <li><%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'logout glyphicon glyphicon-log-out' %></li>
        <% else %>
          <li><%= link_to ' Home',root_path, class: 'home glyphicon glyphicon-home' %></li>
          <li><%= link_to ' About',"/about",class: 'about glyphicon glyphicon-link' %></li>
          <li><%= link_to ' sign up', new_user_registration_path,class: 'sign_up glyphicon glyphicon-edit' %></li>
          <li><%= link_to ' login', new_user_session_path ,class: 'sign_in glyphicon glyphicon-log-in'%></li>
        <% end %>
      </ul>
     </div>
    </nav>








    <%= yield %>
  </body>

</html>

